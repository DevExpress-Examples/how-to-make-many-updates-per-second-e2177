<Window x:Class="DXGrid_ConditionalFormatting.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:DXGrid_ConditionalFormatting" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" Title="Window1" Height="600" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" TextBlock.FontSize="20" DockPanel.Dock="Top">
            <TextBlock>The number of updates per second</TextBlock>
            <TextBlock Name="refreshCountTextBlock" TextBlock.Foreground="Red"></TextBlock>
        </StackPanel>
        <dxg:GridControl x:Name="grid" AutoPopulateColumns="True">
            <dxg:GridControl.View>
                <dxg:TableView AllowHorizontalScrollingVirtualization="True" />
            </dxg:GridControl.View>
            <dxg:GridControl.TotalSummary>
                <dx:GridSummaryItem FieldName="Property0" SummaryType="Count" />
                <dx:GridSummaryItem FieldName="Property0" SummaryType="Sum" />
            </dxg:GridControl.TotalSummary>
            <dxg:GridControl.GroupSummary>
                <dx:GridSummaryItem FieldName="Property0" SummaryType="Count" />
                <dx:GridSummaryItem FieldName="Property0" SummaryType="Sum" />
            </dxg:GridControl.GroupSummary>
        </dxg:GridControl>
    </DockPanel>
</Window>
